

    @if(Movie.Poster is null)
{
    <div
        style="width: 150px; height: 150px; background-color: black; color: white; display: flex; align-items: center; justify-content: center;">
        Image Unavailable
  </div>
}
else {
    <img src=@Movie.Poster height="150" width="150" />
}
    
<p class="moviedetails-title">@Movie.Title</p> 
    
@if (!string.IsNullOrEmpty(@Movie.Year))
{
    <span class="moviedetails-year">
        <text>@Movie.Year</text> 
    </span>
}

@code {
    [Parameter] public Movie Movie { get; set; }
}
